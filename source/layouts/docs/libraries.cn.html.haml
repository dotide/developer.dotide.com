- wrap_layout 'docs.cn' do
  = partial 'layouts/docs/skel'
  - if content_for? :raw_content
    = yield_content :raw_content
  - else
    .markdown= yield

  - content_for :sidebar do
    %dl.accordion{:'data-accordion' => true}
      %dd
        %a{href: '#official'}
          %i.fa.fa-leaf
          = '官方'
        #official.content
          %ul.side-nav
            %li.nav-ruby
              %a{href: '/docs/libraries/ruby.html'}
                %span
                  = "Ruby"
      %dd
        %a{href: '#community'}
          %i.fa.fa-leaf
          = '社区'
        #community.content
          %ul.side-nav

  - content_for :second_nav do
    %ul.off-canvas-list
      %li
        %label= '官方'
      %li.nav-ruby
        %a{href: '/docs/libraries/ruby.html'}= "Ruby"
      %li
        %label= '社区'

  - content_for :javascripts do
    :javascript
      $('dd.nav-libraries').addClass('active');
      $("##{current_page.data.section}").addClass('active');
      $("##{current_page.data.section}").parent().addClass('active');
      $("li.nav-#{current_page.data.page}").addClass('active');
