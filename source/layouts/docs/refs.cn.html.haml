- wrap_layout 'docs.cn' do
  = partial 'layouts/docs/skel'
  - if content_for? :raw_content
    = yield_content :raw_content
  - else
    .markdown= yield

  - content_for :sidebar do
    %dl.accordion{:'data-accordion' => true}
      %dd
        %a{href: '#basics'}
          %i.fa.fa-plus-square
          = '调用基础'
        #basics.content
          %ul.side-nav
            %li.nav-overview
              %a{href: '/docs/v1/basics/overview.html'}
                %span
                  = "调用约定"
            %li.nav-auth
              %a{href: '/docs/v1/basics/auth.html'}
                %span
                  = "认证与权限控制"
      %dd
        %a{href: '#data'}
          %i.fa.fa-plus-square
          = '数据存取'
        #data.content
          %ul.side-nav
            %li.nav-datastream
              %a{href: '/docs/v1/data/datastream.html'}
                %span
                  = "数据流"
            %li.nav-datapoint
              %a{href: '/docs/v1/data/datapoint.html'}
                %span
                  = "数据点"

  - content_for :second_nav do
    %ul.off-canvas-list
      %li
        %label= '调用基础'
      %li.nav-overview
        %a{href: '/docs/v1/basics/overview.html'}= "调用约定"
      %li.nav-auth
        %a{href: '/docs/v1/basics/auth.html'}= "认证与权限控制"
      %li
        %label= '数据存取'
      %li.nav-datastream
        %a{href: '/docs/v1/data/datastream.html'}= "数据流"
      %li.nav-datapoint
        %a{href: '/docs/v1/data/datapoint.html'}= "数据点"

  - content_for :javascripts do
    :javascript
      $('dd.nav-refs').addClass('active');
      $("##{current_page.data.section}").addClass('active');
      $("##{current_page.data.section}").parent().addClass('active');
      $("li.nav-#{current_page.data.page}").addClass('active');
