- wrap_layout :cn do
  .api
    .api-header
      .page-title
        %h2
          = 'API 服务'
    .api-content.markdown
      .row
        .large-3.columns
          = partial "layouts/cn_sidebar"
        .large-8.columns.large-offset-1
          = yield

  - content_for :javascripts do
    :javascript
      $(".api section.#{current_page.data.current_section}").addClass('active');
