- wrap_layout :cn do
  .row
    .small-12.columns
      %nav.breadcrumbs
        = link_to '/cn/api/index.html' do
          = 'API文档'
        = yield_content :breadcrumbs
  .row.markdown
    .large-8.large-offset-1.push-3.columns
      = yield
    .large-3.pull-9.columns.sidebar
      = yield_content :sidebar

  - content_for :footer do
    %footer.footer
      .row
        .small-12.large-6.columns
          %ul
            %li
              = link_to 'http://help.dotide.com/cn/categories/products-services.html' do
                = '产品与服务'
            %li
              = link_to 'http://developer.dotide.com/cn/index.html' do
                = '开发者中心'
            %li
              = link_to 'http://help.dotide.com/cn/articles/jobs.html' do
                = '招贤纳士'
            %li
              = link_to 'http://help.dotide.com/cn/articles/contactus.html' do
                = '联系我们'
        .small-12.large-6.columns
          %ul.right
            %li= "© #{Date.today.year} Dotide"
            %li
              = link_to 'http://www.miibeian.gov.cn/index.html', :class => 'beian' do
                = '苏ICP备12071270号'

  - content_for :javascripts do
    :javascript
      $(".sidebar .#{current_page.data.current_section}").addClass('active');
